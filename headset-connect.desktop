[Desktop Entry]
Type=Application
Encoding=UTF-8
Name=Headset Connect
Comment=Script to connect to bt headset
Exec=btcon 0
Icon=/home/sayan/.icons/bthdphn.png
Terminal=true
Actions=Disconnect;Reconnect;;Troubleshoot;;

[Desktop Action Disconnect]
Name=Disconnect
Exec=btcon -d

[Desktop Action Reconnect]
Name=Reconnect
Exec=btcon -r

[Desktop Action Troubleshoot]
Name=Troubleshoot
Exec=btcon -t